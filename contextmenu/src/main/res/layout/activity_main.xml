<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Title -->
    <ImageView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/wei_top" />

    <!-- Avatar -->
    <ImageView
        android:id="@+id/head"
        android:layout_width="@dimen/head"
        android:layout_height="@dimen/head"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/head" />

    <!-- Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/head"
        android:layout_marginLeft="@dimen/margin"
        android:layout_toEndOf="@+id/head"
        android:layout_toRightOf="@+id/head"
        android:text="@string/name"
        android:textColor="@color/name" />

    <!-- Intro -->
    <TextView
        android:id="@+id/introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/introduce" />

    <!-- Left Book -->
    <ImageView
        android:id="@+id/left_book"
        android:layout_width="@dimen/book_image_width_height"
        android:layout_height="@dimen/book_image_width_height"
        android:layout_below="@+id/introduce"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="@dimen/margin"
        android:src="@drawable/java" />

    <!-- Right Book -->
    <ImageView
        android:id="@+id/right_book"
        android:layout_width="@dimen/book_image_width_height"
        android:layout_height="@dimen/book_image_width_height"
        android:layout_below="@+id/introduce"
        android:layout_marginTop="@dimen/margin"
        android:layout_toRightOf="@+id/left_book"
        android:src="@drawable/java_t" />

    <!-- Comment -->
    <ImageView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_book"
        android:layout_marginTop="@dimen/bottom_margin"
        android:src="@drawable/wei_bottom" />

</RelativeLayout>